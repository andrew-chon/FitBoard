<script src="https://code.jquery.com/jquery.js"></script>
<script src="/assets/js/index.js"></script>




<body>
  <div class="header">
    <div class="frow height-100">
      <div class="col-xs-1-4">
        <span class="color-block-landing"></span>
        <div class="frow">
          <div class="justify-start height-100 logo">FitBOARD</div>
        </div>
      </div>
      <div class="col-xs-3-4 height-100">
        <div class="frow justify-end items-center height-100">
          <nav>
            <ul>
              <li id="login">
                <a id="login-trigger">
                  Log in
                </a>
                <div id="login-content">
                  <form>
                    <fieldset class="inputs">
                      <input id="headerUsername" placeholder="Username" required>
                      <input id="headerPassword" placeholder="Password" required>
                    </fieldset>
                    <fieldset>
                      <button id="submitLogin" class="submit">Log In</button>
                    </fieldset>
                  </form>
                </div>
              </li>
            </ul>
          </nav>
        </div>
      </div>
    </div>
  </div>

  {{!-- <a class="mr-25" onclick="signInIndex()">
    Login
  </a> --}}

  <main class="frow-container mt-20">
    <!-- can be kept as divs or h's pending on what we want to do, just messing with different styles -->
    <h3 class="frow">
      <div class="slogan-font">JOIN. COMPETE. WIN.</div>
    </h3>
    <div class="scroll-down"></div>
    <!-- see above message for details  -->

    <div class="frow mt-50 sign-up">
      <div class="mt-20 top-font">Sign up for free today!</div>
      <div class="frow-container mt-30">
        <form novalidate="novalidate" id="userForm" style="background-color: white;">
          <div class="frow gutters">
            <div class="col-md-1-2">
              <input type="text" maxlength="100" required="required" name="firstName" />
              <label>First Name</label>
              <div id="error-first-name" class="error" hidden>
                This field is required
              </div>
            </div>
          </div>
          <div class="frow gutters">
            <div class="col-md-1-2">
              <input type="text" maxlength="100" required="required" name="lastName" />
              <label>Last Name</label>
              <div id="error--name" class="error" hidden>
                This field is required
              </div>
            </div>
          </div>
          <div class="frow gutters">
            <div class="col-md-1-2">
              <input type="text" maxlength="100" required="required" name="userName" id="userName" />
              <label>User Name</label>
              <div id="error-user-name" class="error" hidden>
                This field is required
              </div>
            </div>
          </div>
          <div class="frow gutters">
            <div class="col-md-1-2">
              <input type="text" maxlength="100" required="required" name="email" />
              <label>Email</label>
              <div class="error" hidden>
                This field is required
              </div>
            </div>
          </div>
          <div class="frow gutters">
            <div class="frow col-md-1-2">
              <input type="password" maxlength="100" required="required" name="password" id="password" />
              <label>Password</label>
              <div class="error" hidden>
                <p>
                  Log in error:
                </p>
                <p>
                  Needs 8 characters
                </p>
                <p>
                  Must contain: one letter and one number
                </p>
              </div>
              <button id="register" class="col-md-1-2 mb-10 sign-up-btn">Sign Up</button>
            </div>
          </div>
        </form>
      </div>
    </div>

    <div class="frow mt-100 card-icons">
      <div class="col-md-1-3"><i class="fas fa-3x fa-dumbbell"></i></i></div>
      <div class="col-md-1-3"><i class="fas fa-3x fa-user-friends"></i></div>
      <div class="col-md-1-3"><i class="fas fa-3x fa-dollar-sign"></i></div>
    </div>


    <div class="frow">
      <div class="frow mt-1"></div>
      <div id="chart_div"></div>
    </div>
    <div class="frow mt-5">
      <div class="col-md-1-4 frow shadow-dark justify-between card-one">
        <div class="card-header">Post your workouts.</div>
        <p>Share your workouts with your friends and the FitBOARD community.</p>
      </div>
      <div class="col-md-1-4 frow shadow-dark justify-between card-two ml-30">
        <div class="card-header">Create a Competition.</div>
        <p>Create a friendly competition and see who works out more. </p>
      </div>
      <div class="col-md-1-4 frow shadow-dark justify-between card-three ml-30">
        <div class="card-header">Win some money.</div>
        <p>Winner takes home the money (and bragging rights).</p>
      </div>
    </div>
  </main>