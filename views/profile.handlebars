<div class="frow-container shadow-dark mt-30">
  <form novalidate="novalidate" id="userProfileInfo">
    <div class="frow-container user-form user-inputs mt-15">
      <form>
        <label class="pt-15">
          Height
          <input type="textarea" id="userHeight" class="my-custom-textarea"></input>
        </label>
        <label>
          Weight
          <input type="textarea" id="userWeight" class="my-custom-textarea"></input>
        </label>
        <label>
          DOB
          <input id="date-age" type="date" class="m-5" value="" />
        </label>
        <label>
          Gender
          <select id="gender">
            <optgroup label="Gender">
              <option>Male</option>
              <option>Female</option>
              <option>Prefer not to say</option>
            </optgroup>
          </select>
        </label>
        <label class="">
          Venmo
          <input type="textarea" id="pay-source" class="my-custom-textarea"></input>
        </label>
        <label class="">
          Add a profile picture
          <input id="profileImageUpload" type="file" />
        </label>
        <button id="submit-form" class="my-custom-button items-center " type="submit">
          Submit
        </button>
        <div class="pb-10 mb-15"></div>
    </div>
  </form>
</div>

