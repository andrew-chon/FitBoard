<body>
  <div class="header">
    <div class="frow height-100">
      <div class="col-xs-1-4">
        <span class="color-block-landing"></span>
        <div class="frow">
          <div class="justify-start height-100 logo">FitBOARD</div>
        </div>
      </div>
      <div class="col-xs-3-4 height-100">
        <div class="frow justify-end items-center height-100">
           <nav>
            <ul>
            <li id="login">
              <a id="login-trigger">
               Log in
              </a>
              <div id="login-content">
              <form>
                <fieldset class="inputs">
                  <input id="username" placeholder="Username" required>
                  <input id="password"placeholder="Password"required>
                </fieldset>
                <fieldset>
                  <button id="submitLogin" class="submit">Log In</button>
                </fieldset>
              </form>
              </div>
            </li>
            </ul>
            </nav>
        </div>
      </div>
    </div>
  </div>

  {{!-- <a class="mr-25" onclick="signInIndex()">
    Login
  </a> --}}
  
  <main class="frow-container mt-20">
    <!-- can be kept as divs or h's pending on what we want to do, just messing with different styles -->
    <h3 class="frow">
      <div class="slogan-font">Compete with your friends on FitBOARD</div>
    </h3>
    <h4 class="frow mt-15">
      Set a challenge, join a group, and start competing.
    </h4>
    <!-- see above message for details  -->
    <div class="frow mt-30">

      <div class="frow-container shadow-dark mt-30">
        <form novalidate="novalidate" id="userForm">
          <div class="frow gutters">
            <div class="col-md-1-2">
              <input type="text" maxlength="100" required="required" name="firstName" />
              <label>First Name</label>
              <div id="error-first-name" class="error" hidden>
                This field is required
              </div>
            </div>
            <div class="col-md-1-2">
              <input type="text" maxlength="100" required="required" name="lastName" />
              <label>Last Name</label>
              <div id="error--name" class="error" hidden>
                This field is required
              </div>
            </div>
          </div>
          <div class="col-md-1-2">
            <input type="text" maxlength="100" required="required" name="userName" id="userName" />
            <label>User Name</label>
            <div id="error-user-name" class="error" hidden>
              This field is required
            </div>
          </div>
          <div class="frow gutters">
            <div class="col-md-1-2">
              <input type="text" maxlength="100" required="required" name="email" />
              <label>Email</label>
              <div class="error" hidden>
                This field is required
              </div>
            </div>
            <div class="col-md-1-2">
              <input type="password" maxlength="100" required="required" name="password" id="password" />
              <label>Password</label>
              <div class="error" hidden>
                <p>
                  Log in error:
                </p>
                <p>
                  Needs 8 characters
                </p>
                <p>
                  Must contain: one letter and one number
                </p>
              </div>
            </div>
          </div>
          <button id="register" class="col-md-1-6 col-xs-1-5 mx-5">Sign Up</button>
          <div class="frow">
          </div>
        </form>
      </div>

    </div>
    <div class="frow mt-40">
      <div class="frow mt-30"></div>
      <div id="chart_div"></div>
    </div>
    <div class="frow mt-30">
      <div class="col-md-1-3 frow">
        Show your workouts!
        <div class="small-wrapper workout"></div>
        <!-- <i class="fas fa-dumbbell fa-3x"></i> -->
      </div>
      <div class="col-md-1-3 frow">
        Hang with your friends
        <div class="small-wrapper friends"></div>
      </div>
      <div class="col-md-1-3 frow">
        Win the competition
        <div class="small-wrapper competition"></div>
      </div>
    </div>
  </main>